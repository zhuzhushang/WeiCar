<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
      <ImageView
        android:id="@+id/illegal_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dip"
        android:background="@color/white"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:id="@+id/illegal_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/illegal_state"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/illegal_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未处理"
            
            android:textColor="@color/theme_text_normal_color_red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/illegal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-03-10"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
       
        android:layout_width="wrap_content"
        android:layout_height="48dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
       android:maxWidth="200dip"
       android:paddingTop="6dip"
       android:paddingBottom="6dip"
       android:layout_toLeftOf="@id/illegal_linear"
       android:gravity="center_vertical"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/illegal_title"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="20dip"
            android:gravity="center_vertical"
            android:text="驾驶机动车违驶机动车违驶机动车违驶机动车违驶机动车违驶机动车违反规定站..."
            
            
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/illegal_content"
            android:layout_width="wrap_content"
             android:layout_height="0dip"
            android:layout_weight="1"
           android:gravity="center_vertical"
            android:layout_below="@id/illegal_title"
            android:layout_marginTop="2dip"
            android:text="深圳公路"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="12sp" />
    </LinearLayout>

  

</RelativeLayout>