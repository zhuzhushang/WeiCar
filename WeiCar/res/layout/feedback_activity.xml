<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/newbrain_all_actionbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dip"
        android:text="@string/feedback_tip"
        android:textColor="@color/theme_text_normal_color_black"
        android:textSize="@dimen/textsize_middle" />

    <LinearLayout style="@style/feedback_linear" >

        <EditText
            style="@style/feedback_edit"
            android:hint="@string/feedback_contact" />
    </LinearLayout>
    
    
     <LinearLayout style="@style/feedback_linear"
         android:layout_marginTop="10dip"
         android:layout_height="120dip"
          >

        <EditText
            style="@style/feedback_edit"
            android:layout_height="fill_parent"
             />
    </LinearLayout>
    

</LinearLayout>